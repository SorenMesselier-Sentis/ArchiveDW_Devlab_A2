{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="form-bg">
    <form class="form login" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.name }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        <img class="cid-logo" src="{{ asset('assets/logo/cid_logo.png') }}" alt="logo cid">
        <h1 class="title head">Please sign in</h1>
        <input class="container-form" type="email" value="{{ last_username }}" name="email" id="inputEmail"  placeholder="em@il" class="form-control" autocomplete="email" required autofocus>
        <input class="container-form" type="password" name="password" id="inputPassword" class="form-control" placeholder="password" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}

        <button class="submit" type="submit">
            Sign in
        </button>
    </form>
</div>
{% endblock %}
